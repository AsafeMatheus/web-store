<%- include('partials/header') %> 

    <div class="products">
        <!----------------------LINE----------------------------->
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <% allProducts.forEach((content) => { %>
                <div class="col">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <h4 class="my-0 fw-normal"><img src=<%= content.image %>></h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title"> R$ <%= content.price %>.00 </h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>name: <%= content.name %> </li>
                                <li>stock: <%= content.stock %> </li>
                            </ul>
                            <a href="/products/<%= content.name %>"><button type="button" class="w-100 btn btn-lg btn-outline-primary">Buy</button></a>
                        </div>
                    </div>
                </div>
            <% }) %> 
            
        </div>
    </div>

<%- include('partials/footer') %> 